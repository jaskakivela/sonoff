{
    "apiVersion": "apps.openshift.io/v1",
    "kind": "DeploymentConfig",
    "metadata": {
        "labels": {
            "app": "sonoff-server"
        },
        "name": "sonoff-server",
        "namespace": "sonoff"
    },
    "spec": {
        "replicas": 1,
        "revisionHistoryLimit": 5,
        "selector": {
            "app": "sonoff-server",
            "deploymentconfig": "sonoff-server"
        },
        "strategy": {
            "activeDeadlineSeconds": 21600,
            "resources": {},
            "rollingParams": {
                "intervalSeconds": 1,
                "maxSurge": "25%",
                "maxUnavailable": "25%",
                "timeoutSeconds": 600,
                "updatePeriodSeconds": 1
            },
            "type": "Rolling"
        },
        "template": {
            "metadata": {
                "creationTimestamp": null,
                "labels": {
                    "app": "sonoff-server",
                    "deploymentconfig": "sonoff-server"
                }
            },
            "spec": {
                "containers": [
                    {
                        "image": "configure:latest",
                        "imagePullPolicy": "Always",
                        "name": "configure",
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "terminationMessagePolicy": "File"
                    }
                ],
                "dnsPolicy": "ClusterFirst",
                "restartPolicy": "Always",
                "schedulerName": "default-scheduler",
                "securityContext": {},
                "terminationGracePeriodSeconds": 30
            }
        },
        "test": false,
        "triggers": [
            {
                "type": "ConfigChange"
            },
            {
                "imageChangeParams": {
                    "automatic": true,
                    "containerNames": [
                        "configure"
                    ],
                    "from": {
                        "kind": "ImageStreamTag",
                        "name": "configure:latest",
                        "namespace": "sonoff"
                    }
                },
                "type": "ImageChange"
            }
        ]
    }
}
